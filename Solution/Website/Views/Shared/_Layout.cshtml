    <script>
        //var now = new Date();
        var today = cDate();
        function cDate(nowD) {
            var now;
            if (nowD != null) {
                now = new Date(nowD);
            } else {
                now = new Date();
            }
            var day = ("0" + now.getDate()).slice(-2);
            var month = ("0" + (now.getMonth() + 1)).slice(-2);
            var today = now.getFullYear() + "-" + (month) + "-" + (day);
            return today;
        };


        function confirmationDialog(title, contentMsg, yesFunction, noFunction) {
            $("#confirmationDialog").modal();
            if (title != "") {
                $("#mdlTitle").text(title);
            }
            if (contentMsg != "") {
                $("#mdlContentMsg").text(contentMsg);
            }
            $("#btnMdlYes").click(function () {
                $("#confirmationDialog").modal("hide");
                yesFunction();
            });
            $("#btnMdlNo").click(function () {
                noFunction();
                $("#confirmationDialog").modal("hide");
            });
        };


        function successDialog(title, contentMsg) {
            $("#successDialog").modal();
            if (title != "") {
                $("#mdlscTitle").text(title);
            }
            if (contentMsg != "") {
                $("#mdlscContentMsg").text(contentMsg);
            }

        };

        function errorDialog(title, contentMsg) {
            $("#errorDialog").modal();
            if (title != "") {
                $("#mdlerTitle").text(title);
            }
            if (contentMsg != "") {
                $("#mdlerContentMsg").text(contentMsg);
            }
        };

        //bootstrap display none
        function btHide(selector) {
            $(selector).addClass('d-none');
        };

        //bootstrap display
        function btShow(selector) {
            $(selector).removeClass('d-none');
        };

        //bootstrap readonly
        function btReadOnly(selector, isReadonly) {
            $(selector).prop("readonly", isReadonly);
        };

        //bootstrap disabled
        function btDisabled(selector, isDisable) {
            $(selector).prop('disabled', isDisable);
        };
    </script>
