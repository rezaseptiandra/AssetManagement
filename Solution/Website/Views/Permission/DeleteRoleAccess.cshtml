@{
    ViewData["Title"] = "Delete RoleAccess";
}
<h1>@ViewData["Title"]</h1>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#mainform").on("submit", function () {
                var _obj = {
                    ControllerName: $("#controllername").val(),
                    RoleID: $("#roleid").val()
                };
                debugger;
                _obj = JSON.stringify(_obj);
                $.ajax({
                    url: "SubmitDeleteRoleAccess",
                    type: 'post',
                    datatype: 'application/json',
                    data: { obj: _obj },
                    success: function (data) { },
                    error: function () {
                        alert('Ajax error!');
                    }
                });
                return false;
            });
        });
    </script>
}
<p>Register</p>
<form id="mainform">
    ControllerName: <input type="text" id="controllername" /> <br />
    RoleID: <input type="text" id="roleid" /> <br />
   
    <input type="submit" value="Submit" class="submit" /><br />
</form>
